<Window x:Class="RasterPaint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:RasterPaint"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="700"
        MinHeight="350" MinWidth="700">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="Width" Value="95"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Name="imageGrid" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                SizeChanged="imageGrid_SizeChanged">
            <Image Name="myImage" VerticalAlignment="Top" HorizontalAlignment="Left"        
                MouseLeftButtonDown="myImage_ButtonDown"
                MouseLeftButtonUp="myImage_ButtonUp"
                MouseLeave="myImage_MouseLeave"/>
        </Grid>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="testButton" Content="Test Button" Style="{StaticResource ButtonStyle}"
                Click="testButton_Click"/>

            <Button Name="drawGridButton" Content="Show Grid" Style="{StaticResource ButtonStyle}"
                     Click="drawGridButton_Click"/>

            <TextBox Name="GridSize" Height="25" Width="25" Text="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                     TextChanged="GridSize_TextChanged"/>

            <xctk:ColorPicker Height="25" Width="75" Name="GridColor" Margin="5" SelectedColor="Gray"/>

            <xctk:ColorPicker Height="25" Width="75" Name="ObjectColor" Margin="5" SelectedColor="DarkViolet"/>

            <Button Name="removeObjectButton" Content="Remove object" Style="{StaticResource ButtonStyle}"
                    Click="removeObjectButton_Click"/>
            
            <Button Name="moveObjectButton" Content="Move object" Style="{StaticResource ButtonStyle}"
                    Click="moveObjectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
